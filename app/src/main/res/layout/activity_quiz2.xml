<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity2">


    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="chon level"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="italic"
            />
        <Button
            android:id="@+id/khoButton"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/level"
            android:layout_marginTop="112dp"
            android:backgroundTint="@color/white"
            android:text="khó"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/trungbinhButton"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/khoButton"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/white"
            android:text="trung bình"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/deButton"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/trungbinhButton"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/white"
            android:text="dễ"
            android:textColor="@color/black"
            android:textSize="20dp"
            />



    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>